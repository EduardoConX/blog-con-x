---
import { SITE_TITLE, SUBDOMAIN } from "@/consts";
---

<header class="bg-gray-800 shadow fixed w-full">
  <div
    class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex justify-between items-center"
  >
    <a class="text-3xl font-bold text-gray-100" href={`/${SUBDOMAIN}`}
      >{SITE_TITLE}</a
    >
    <form action={`/${SUBDOMAIN}search`} method="get">
      <input
        type="text"
        name="q"
        placeholder="Search..."
        class="px-3 py-2 rounded-md text-gray-100 bg-gray-800
      border border-gray-600
      focus:outline-none focus:ring-2 focus:ring-indigo-500"
      />
    </form>
  </div>
</header>
